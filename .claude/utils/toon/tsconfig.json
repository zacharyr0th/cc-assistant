{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["node", "jest"]
  },
  "include": [
    "*.ts",
    "__tests__/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "verify.mjs"
  ]
}
